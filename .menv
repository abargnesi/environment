#curl functions
function post-file {
    FILE=""
    URL=""
    if [ $# -eq 2 ]; then
        FILE="$1"
        URL="$2"
    elif [ $# -eq 1 ]; then
        FILE="$1"
        URL="http://localhost:9000/files"
    else
        echo "usage: post-file FILE <post-url>"
        return
    fi

    curl -X POST -F file=@$FILE $URL
}

