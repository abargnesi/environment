# show battery status
battery() {
    NOW=$(cat /sys/class/power_supply/BAT0/energy_now)
    FULL=$(cat /sys/class/power_supply/BAT0/energy_full)
    STATUS=$(cat /sys/class/power_supply/BAT0/status)
    REMAINING=$(echo "scale=1; $NOW / $FULL * 100" | bc)
    echo "$REMAINING% ($STATUS)"
}

